@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap");

div#redeem-bg {
  background-color: #fbeedf !important;
}
section#refer-bg {
  background-image: url({{"refer-bgg.png"|asset_url}});
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  height: 92vh;
}

#tlf-loyalty-atf {
  height: 75vh;
  background-image: url({{"tlf-header-bg.png"|asset_url}});
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  /* width: 100vw;
  position: relative;
  left: calc(-50vw + 50%); */
}
#atf-content {
  display: flex;
  width: 70%;
  height: 70%;
  flex-flow: column;
  justify-content: flex-end;
  padding-top: 300px;
  text-align: center;
  align-items: flex-start;
  margin-left: 7.5%;
  background: transparent;
}
#tlf-title-atf,
#tlf-atf-buttons {
  width: 60%;
}

#tlf-title-atf h1 {
  font-size: 79px !important;
  color: #2b2b2b;
  font-weight: normal;
  font-family: "Poppins", sans-serif;
  margin: 0px;
  font-weight: bold;
}

#tlf-title-atf p {
  color: #2b2b2b;
  font-size: 16px;
  margin-bottom: 35px;
  font-family: "Poppins", sans-serif;
}

div#tlf-logo {
  margin-bottom: -55px;
  position: relative;
  z-index: 1;
  margin-left: 20px;
}

button {
  background: none;
  border: none;
  padding: 0;
}

button:hover,
button:focus {
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
}
#tlf-atf-buttons {
  display: flex;
  height: 50px;
  justify-content: left;
  width: 40%;
}
#tlf-atf-buttons .prim-btn,
#tlf-atf-buttons .sec-btn {
  padding: 12px 0;
  background-color: #fff;
  border: none;
  color: #000;
  margin-right: 10px;
  text-decoration: none;
  width: 35%;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-radius: 100px; */
  font-size: 15px;
  font-family: "Poppins", sans-serif;
  font-weight: bold;
}
#tlf-atf-buttons .prim-btn {
  color: #000;
}
