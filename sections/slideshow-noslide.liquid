<script>
$("#photos img:gt(0)").hide();
var slideshow = setInterval(function () {
  var current = $("#photos img:visible");
  var next = current.next().length ? current.next() : $("#photos img:eq(0)");
  current.fadeOut(0);
  next.fadeIn(0);
}, 2000);

$("#photos2 img:gt(0)").hide();
var slideshow = setInterval(function () {
  var current = $("#photos2 img:visible");
  var next = current.next().length ? current.next() : $("#photos2 img:eq(0)");
  current.fadeOut(0);
  next.fadeIn(0);
}, 2000);
</script>

